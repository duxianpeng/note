<lib:CustomDialog x:Class="YuewenNote.NewGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YuewenNote"
        xmlns:lib="clr-namespace:YuewenNoteLibrary;assembly=YuewenNoteLibrary"
        mc:Ignorable="d"
        Title="New Group"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" Margin="5" Background="{DynamicResource ControlBackgroundBrush}">
        <StackPanel Orientation="Horizontal" Margin="20">
            <Label Content="Group Name:"/>
            <TextBox Width="300" Text="{Binding GroupName}"/>
        </StackPanel>
        <Border Name="OkCancelButtonsPlaceholder"
                             Margin="0,0,20,20" BorderThickness="0" Grid.Row="1"/>
    </StackPanel>
</lib:CustomDialog>
